.set-list{
    padding-left:20rpx;
    background-color:#fff;
    border:1px solid #e7e7e7;
    border-left-width:0;
    border-right-width:0;
}
.set-item{
    height:60rpx;
    display: flex;
    flex-flow:row wrap;
    align-items:center;
    overflow: hidden;
    border-bottom:1px solid #e7e7e7;
}
.set-item:last-child{
    border-bottom:0;
}

.set-t{
    flex:1;
   
}
.arrow{
    content:"";
    display: inline-block;
    width:10px;
    height:10px;
    border:1px solid;
    border-color:#ccc #ccc transparent transparent;
    transform:rotate(45deg);
    margin-right:20rpx;
}

